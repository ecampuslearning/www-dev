{
  "name": "Base Image",
  "image": "ghcr.io/ecampuslearning/devcontainer:base",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--init",
    "--hostname=${localWorkspaceFolderBasename}-dev"
  ],
  "mounts": [
    "source=${localEnv:USERPROFILE}${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/config/shell/.bashrc,target=/home/vscode/.bashrc,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/config/shell/.bash_aliases,target=/home/vscode/.bash_aliases,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/config/shell/.profile,target=/home/vscode/.profile,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/config/shell/.bash_history,target=/home/vscode/.bash_history,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        // --- Git & Source Control ---
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        // --- Docker & Containers ---
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        // --- Python ---
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        // --- Makefile & Build Tools ---
        "ms-vscode.makefile-tools",
        // --- Editor & Productivity ---
        "aaron-bond.better-comments",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "gruntfuggly.todo-tree",
        "oderwat.indent-rainbow",
        "PKief.material-icon-theme",
        "redhat.vscode-yaml",
        "shardulm94.trailing-spaces",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "visualstudioexptteam.intellicode-api-usage-examples",
        "visualstudioexptteam.vscodeintellicode",
        "yzhang.markdown-all-in-one",
        // --- AI & Copilot ---
        "github.copilot",
        "github.copilot-chat",
        // --- Collaboration ---
        "ms-vsliveshare.vsliveshare"
      ]
    }
  },
  "containerEnv": {
    "PROJECT_NAME": "${localWorkspaceFolderBasename}",
    "WORKSPACE_DIR": "${containerWorkspaceFolder}"
  },
  "remoteUser": "${env:DEVCONTAINER_USER}",
  "containerUser": "${env:DEVCONTAINER_USER}",
  "postStartCommand": "bash .devcontainer/scripts/entrypoint.sh --setup"
}